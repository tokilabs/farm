{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": false,
    "sourceMap": false,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": ".",
    "outDir": "compiled",
    "baseUrl": ".",
    "paths": {
      "@cashfarm/lang": ["../lib"]
    }
  },
  "exclude": [
    "node_modules",
    "../lib",
    "../gulpfile.ts"
  ]
}
