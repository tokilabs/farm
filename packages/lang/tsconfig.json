{
  "extends": "./config/tsconfig.flexible",
  "compileOnSave": true,
  "compilerOptions": {
    "composite": true,
    "target": "ES6",
    "outDir": "lib",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "inlineSourceMap": false,
    "listFiles": false,
    "traceResolution": false,
    "pretty": true,
    "lib" : [
      "es6",
      "dom"
    ],
    "plugins": [
      { "name": "tslint-language-service"}
    ],
    "baseUrl": "./",
    "declarationMap": true,
    "paths": {
      "@tokilabs/lang": ["./src/index"]
    }
  },
  "references": [
    { "path": "./src" },
    { "path": "./tests" }
  ],
  "exclude": [
    "node_modules",
    "lib",
    "gulpfile.ts"
  ]
}
